# Basic Settings
set preview false
set previewer ~/.config/lf/scope
set hidden true
set drawbox true
set icons true
set ignorecase true
set relativenumber

# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        image/*) imv -b 1D2330 -d "$fx";;
	video/*) mpv "$fx";;
        text/*|application/json) $EDITOR "$fx";;
        */pdf) zathura "$fx";;
        *) for f in "$fx"; do xdg-open "$f"> /dev/null 2> /dev/null & done;;
    esac
}}

cmd mkdir ${{
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

cmd sudomkfile ${{
    printf "File Name: "
    read ans
    sudo $EDITOR $ans
}}

cmd setwallpaper ${{
    setbg "$f"
}}

cmd openterm ${{
    $TERMINAL &
}}

# Bindings
# Remove some defaults
map m
map n
map "'"
map '"'
map d
map c
map e

# File Openers
map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"
map oe $$CODEEDITOR "$f"
map os $sudo $CODEEDITOR "$f"
map z $$READER "$f"
map a $$PAGER "$f"

# Basic Functions
map dd delete
map p paste
map x cut
map y copy
map <enter> open
map mf mkfile
map mr sudomkfile
map md mkdir
map bg setwallpaper
map ot openterm
map r rename
map H top
map L bottom
map R reload
map C clear
map U unselect

# Movement
map gv. cd ~/videos

map gp. cd ~/pictures
map gps cd ~/pictures/screenshots

map gw. cd ~/pictures/Wallpapers

map gd. cd ~/documents/Textbooks

map gD cd ~/downloads

map gs. cd ~/.local/bin
map gsl cd ~/.local/bin/lf

map gc cd ~/.config

