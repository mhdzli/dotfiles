#!/bin/sh
# Updates weather forecast

ip r | while read Def _ IP _; do
	case $Def in
		default)
			ping -q -w 1 -c 1 "$IP" >/dev/null || exit

			break ;;
	esac
done

# location="$1"; [ -z "$location" ] || location="$location+"
# curl -s wttr.in/shiraz?format=3
curl -s wttr.in/shiraz?format="%c+%t"
