#!/usr/bin/env sh

set_xmenu(){ \
	# menu="dmenu -l 20 -fn Monospace-18"
	menu='rofi -dmenu'
	pf=""
}
set_waymenu(){ \
	# menu='bemenu --fn=monospace --fn=18 --hb=#89cff0 --hf=#000000 --tf=#000000 --tb=#2dc7bc -l 20'
	menu='rofi -dmenu'
	pf="\\"
}

[ -z "$WAYLAND_DISPLAY" ]  && set_xmenu || set_waymenu

xclip -h 2>/dev/null || [ -n "$WAYLAND_DISPLAY" ] || exit

 wl-copy -h >/dev/null || [ -z "$WAYLAND_DISPLAY" ] || exit

chosen=$(cut -d ';' -f1 ~/.local/share/emoji | $menu -i -l 30 | sed "s/ .*//")

[ "$chosen" != "" ] || exit

case $pf in
	"")
		echo "$chosen" | tr -d '\n' | xclip -selection clipboard
		notify-send "'$chosen' copied to clipboard." &
		;;
	"\\")
		echo "$chosen" | tr -d '\n' | wl-copy
		notify-send "'$chosen' copied to primary." &
esac

