#!/usr/bin/env sh
# Give dmenu list of all unicode characters to copy.
# Shows the selected character in dunst if running.

# Must have xclip installed to even show menu.
wl-copy -h >/dev/null || exit

chosen=$(grep -v "#" ~/.config/emoji | bemenu -i -l 20 -fn Monospace-18)

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")
echo "$c" | tr -d '\n' | wl-copy -o
echo "OK" | bemenu -i -p "$c coppied to clipboard"


