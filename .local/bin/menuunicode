#!/usr/bin/env sh

set_dmenu(){ \
	menu="dmenu -l 20 -fn Monospace-18"
	pf=""
}
set_bemenu(){ \
	menu='bemenu --fn=monospace --fn=18 --hb=#89cff0 --hf=#000000 --tf=#000000 --tb=#2dc7bc -l 20'
	pf="\\"
}

$WAYLAND_DISPLAY 2>/dev/null  && set_dmenu || set_bemenu

[ "$pf" = "" ] & xclip -h 2>/dev/null || exit
[ "$pf" = "\\" ] & wl-copy -h >/dev/null || exit

chosen=$(grep -v "#" ~/.config/emoji | $menu -i )

[ "$chosen" != "" ] || exit

c=$(echo "$chosen" | sed "s/ .*//")

case $pf in
	"")
		echo "$c" | tr -d '\n' | xclip -selection clipboard
		notify-send "'$c' copied to clipboard." &
		s=$(echo "$chosen" | sed "s/.*; //" | awk '{print $1}')
		echo "$s" | tr -d '\n' | xclip
		notify-send "'$s' copied to primary." &
		;;
	"\\")
		echo "$c" | tr -d '\n' | wl-copy
		notify-send "'$c' copied to primary." &
esac

